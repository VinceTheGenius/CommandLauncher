@model List<SelectListItem>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>🚀 • CL app</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
</head>
<body>
    <h1>Command Launcher</h1>

    <h2>The easiest way to launch a command</h2>
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Launch">
        @*<input type="text" placeholder="Write your command here..." id="Command" cols="0" rows="10" class="input" name="Command" />*@

        <label>
            @*<select  class="command" name="Command">
                <option value="" disabled selected hidden>Select a command :</option>
                <option value="0">ipconfig</option>
                <option value="1">systeminfo</option>
            </select>*@

            <select id="Command" class="command" name="Command" asp-items="@(new SelectList(Model, "Value", "Text"))">
                <option value="" disabled selected hidden>Select a command :</option>
            </select>

        </label>

        <br />

        @*<a asp-action="Launch" class="launch">Launch <i class='bx bx-chevron-right'></i></a>*@



        <input type="button" id="btnLaunch" value="Launch" />
    </form>

    <textarea id="taResult" rows="15" cols="40" class="result">
        @ViewData["Text"]
    </textarea>


    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
</body>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</html>